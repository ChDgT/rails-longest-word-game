<div class="container py-3">

<h1 class="text-center">New Game</h1>
<br>
<ul class="text-center"><% @letters.each do |letter| %>
  <li class="alert alert-warning"><%= letter %></li>
  <%end %>
</ul>
<br>
<br>
<br>
<h2>What is the longest word you can find ?</h2>
<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters %>"  />
  <input type="text" name="answer" class="form-text text-muted " >
  <input type="submit" value="Play" class="btn btn-primary">
</form>

</div>
